  }
  
  .seminar-card-speaker {
    font-size: 0.875rem;
    color: var(--color-text-secondary);
    margin: 0 0 1rem 0;
  }
  
  .seminar-card-speaker .affiliation {
    color: var(--color-text-muted);
  }
  
