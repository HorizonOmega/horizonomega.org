---
import LanguageSwitcher from '../components/LanguageSwitcher.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { title = 'HΩ', description = 'Advancing AI Safety Through Collaboration' } = Astro.props;
const year = new Date().getFullYear();
const currentLocale = Astro.currentLocale || 'en';
const isFrench = currentLocale === 'fr';
---

<!DOCTYPE html>
<html lang={currentLocale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <link rel="alternate" type="application/rss+xml" title="RSS" href="/feed.xml" />
    <link rel="preload" href="/fonts/Inter-roman.latin.var.woff2" as="font" type="font/woff2" crossorigin />
    <title>{title}</title>
  </head>
  <body>
    <LanguageSwitcher />
    <article>
      <slot />
    </article>
    <small style="display: block;">
      <time>{year}</time> © HΩ
      <div class="footerlinks">
        <a href="https://airtable.com/app2x6pt40F3Xkisy/pagBCOPJWd7KSWe1d/form">{isFrench ? 'Commentaires' : 'Feedback'}</a>
        <a href="https://bsky.app/profile/horizonomega.org">{isFrench ? 'Suivre sur Bluesky' : 'Follow on Bluesky'}</a>
        <a href="https://horizonomega.substack.com/">{isFrench ? 'Suivre sur Substack' : 'Follow on Substack'}</a>
        <a href="https://horizonomega.notion.site/Horizon-Omega-Privacy-policy-92dcc814305a405db968dfcf48b70ab6">{isFrench ? 'Politique de confidentialité' : 'Privacy policy'}</a>
      </div>
    </small>
  </body>
</html>

<style is:global>
  /* EXACT Nextra styles from main.css */
  @font-face {
    font-family: 'Inter var';
    font-style: normal;
    font-weight: 100 900;
    font-display: block;
    src: url(/fonts/Inter-roman.latin.var.woff2) format('woff2');
  }
  @font-face {
    font-family: 'Inter var';
    font-style: italic;
    font-weight: 100 900;
    font-display: block;
    src: url(/fonts/Inter-italic.latin.var.woff2) format('woff2');
    font-named-instance: 'Italic';
  }

  body {
    font-family: 'Inter var', system-ui, -apple-system, BlinkMacSystemFont,
      'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif,
      'Apple Color Emoji', 'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
    -webkit-font-smoothing: subpixel-antialiased;
    font-feature-settings: 'case' 1, 'cpsp' 1, 'dlig' 1, 'cv01' 1, 'cv02',
      'cv03' 1, 'cv04' 1;
    font-variation-settings: 'wght' 450;
    font-variant: common-ligatures contextual;
    letter-spacing: -0.02em;
    
    /* Nextra defaults */
    padding-left: 1rem;
    padding-right: 1rem;
    margin: 0;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
  }
  
  b,
  strong,
  h3,
  h4,
  h5,
  h6 {
    font-variation-settings: 'wght' 650;
  }
  
  h1 {
    font-variation-settings: 'wght' 850;
    letter-spacing: -.03em;
  }
  
  h2 {
    font-variation-settings: 'wght' 750;
  }

  @media screen and (min-device-pixel-ratio: 1.5),
    screen and (min-resolution: 1.5dppx) {
    body {
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
    }
  }

  /* Nextra article container */
  article {
    margin-left: auto;
    margin-right: auto;
    padding-top: 3rem;
    padding-bottom: 2rem;
    display: block;
    flex: 1;
    
    /* Nextra prose sizing */
    max-width: 65ch;
    color: #374151;
    font-size: 1rem;
    line-height: 1.75;
  }

  /* Nextra prose styles */
  article p {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
  }
  
  article ul {
    margin-top: 1.25em;
    margin-bottom: 1.25em;
    padding-left: 1.625em;
    list-style-type: disc;
  }
  
  article li {
    margin-top: .5em;
    margin-bottom: .5em;
  }
  
  article ul > li {
    padding-left: .375em;
  }
  
  article strong {
    color: #111827;
    font-weight: 600;
  }
  
  article a {
    color: #111827;
    font-weight: 500;
    text-decoration: underline;
  }
  
  article img {
    margin-left: auto;
    margin-right: auto;
  }

  /* Footer styles - exactly like Nextra */
  small {
    max-width: 65ch;
    margin-left: auto;
    margin-right: auto;
    margin-top: 4rem;
    margin-bottom: 2rem;
    padding: 0 1rem;
    color: #69778c;
    font-size: 0.875rem;
  }
  
  .footerlinks {
    float: right;
  }
  
  .footerlinks a {
    padding-left: 1rem;
    color: #69778c;
    text-decoration: none;
  }
  
  .footerlinks a:hover {
    text-decoration: underline;
  }
  
  @media screen and (max-width: 480px) {
    article {
      padding-top: 2rem;
      padding-bottom: 4rem;
    }
  }
</style>